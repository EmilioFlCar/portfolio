---
import { Icon } from "astro-icon/components";

const { tech } = Astro.props;
---

<div class="md:relative group p-1.5">
  <div
    class="flex flex-wrap bg-tertiary p-1 rounded-full hover:bg-primary transition-transform duration-300  hover:scale-110 md:hover:scale-120"
  >
    <div class="flex justify-center items-center px-1 md:p-2 md:transition-transform duration-340 md:hover:scale-125">
      <Icon name={tech.icon} class="h-7 md:h-8 w-7 md:w-8 text-[#2B2D42] " />
    </div>
    <div  class="justify-center items-center mr-2 block md:hidden">
      <span
        class="m-1 text-[#2B2D42] font-bold text-xs text-center"
      >
        {tech.name}
      </span>
    </div>
  </div>
  <div>
    <span
      class="hidden md:block md:absolute md:left-1/2 md:transform -translate-x-1/2 md:mt-2 md:px-2 md:py-1 text-xs font-bold md:text-white text-[#2B2D42] md:bg-gray-800 rounded md:opacity-0 md:group-hover:opacity-100 md:transition-opacity duration-300"
    >
      {tech.name}
    </span>
  </div>
</div>
