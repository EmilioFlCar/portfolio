---
import TechStack from "./TechStack.astro";

const { experience } = Astro.props;
const { title, position, from, to, technologies } = experience.data;
---

<div
  class="bg-[#2B2D42] hover:bg-[#3E4259] border-[#3E4259] hover:text-[#f3d052] rounded-lg hover:shadow-md p-2 transition-colors duration-200"
>
  <div class="flex flex-col p-4 md:grid md:grid-cols-4 md:gap-4">
    <div class="md:col-span-1 hidden md:block">
      <h1 class="hover:text-[#f3d052] text-sm font-extralight">
        <span>{from} - {to} </span>
      </h1>
    </div>

    <div class="md:col-span-3">
      <div class="md:items-center md:gap-3">
        <div class="md:flex md:items-center md:gap-3">
          <h1 class="text-xl font-extrabold text-primary">
            {position}
          </h1>
          <p class="hover:text-[#faf0cad1] text-primary hidden md:block">â€¢</p>
          <p class="text-base">{title}</p>
        </div>
      </div>
      <div class="block md:hidden">
        <p class="md:text-[#f3d052] text-xs font-extralight">
          {from} - {to}
        </p>
      </div>
      <div
        set:html={experience.rendered?.html}
        class="text-text-secondary py-2 text-sm"
      />
      <div>
        <TechStack techStack={technologies} />
      </div>
    </div>
  </div>
  <div class="md:col-span-3"></div>
</div>
